<%= form_for(@address, html: { class: "basic-grey" }) do |f| %>
		
	<p id="notice"><%= notice %></p>

	<p>
	  <strong>Street:</strong>
	  <%= @address.street %>
	</p>

	<p>
	  <strong>City:</strong>
	  <%= @address.city %>
	</p>

	<p>
	  <strong>State:</strong>
	  <%= @address.state %>
	</p>

	<p>
	  <strong>Contact:</strong>
	  <%= @address.contact.nome %>
	</p>
	<%= link_to 'Edit', edit_address_path(@address), class: "button" %> |
    <%= link_to 'Voltar', addresses_path, class: "button" %>
<% end %>