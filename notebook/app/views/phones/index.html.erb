<div class="basic-grey">
  <p id="notice"><%= notice %></p>

  <h1>Listing Phones</h1>

  <table>
    <thead>
      <tr>
        <th><%= Phone.human_attribute_name("phone") %></th>
        <th><%= Phone.human_attribute_name("contact") %></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @phones.each do |phone| %>
        <tr style="background: <%= cycle('white', '#F7F7F7') %>">
          <td><%= phone.phone %></td>
          <td><%= phone.contact.nome %></td>
          <td><%= link_to 'Show', phone %></td>
          <td><%= link_to 'Edit', edit_phone_path(phone) %></td>
          <td><%= link_to 'Destroy', phone, method: :delete, data: { confirm: t('mensages.confirm') } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
    <%= paginate @phones %>
  <br>

  <%= link_to 'New Phone', new_phone_path %>
  <%= link_to "Home", root_path %>
</div>