<div class="basic-grey">
  <p id="notice"><%= notice %></p>

  <h1>Listing Kinds</h1>

  <table>
    <thead>
      <tr>
        <th><%= Kind.human_attribute_name("kind") %>Description</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @kinds.each do |kind| %>
        <tr style="background: <%= cycle('white', '#F7F7F7') %>">
          <td><%= kind.description %></td>
          <td><%= link_to 'Show', kind %></td>
          <td><%= link_to 'Edit', edit_kind_path(kind) %></td>
          <td><%= link_to 'Destroy', kind, method: :delete, data: { confirm: t('mensages.confirm') } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
    <%= paginate @kinds %>
  <br>

  <%= link_to 'New Kind', new_kind_path, class: "button" %>
  <%= link_to 'Home', root_path, class: "button" %>
</div>