<div class="table-responsive">
  
  <script type="text/javascript">
    $.notify("<%= notice %>", "success");
  </script>

  <h1>Listing Kinds</h1>

  <table class="table">
    <thead>
      <tr>
        <th><%= Kind.human_attribute_name("description") %></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @kinds.each do |kind| %>
        <tr style="background: <%= cycle('white', '#F7F7F7') %>">
          <td><%= kind.description %></td>
          <td><%= link_to t("buttons.edit"), edit_kind_path(kind) %></td>
          <td><%= link_to t("buttons.destroy"), kind, method: :delete, data: { confirm: t('mensages.confirm') } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
    <%= paginate @kinds %>
  <br>

  <%= link_to 'Novo Tipo', new_kind_path, class: "btn btn-primary" %>
  <%= link_to 'Home', root_path, class: "btn btn-success" %>
</div>