<div class="basic-grey">
  <p id="notice"><%= notice %></p>

  <h1>Listing Addresses</h1>

  <table>
    <thead>
      <tr>
        <th><%= Address.human_attribute_name("street") %></th>
        <th><%= Address.human_attribute_name("city") %></th>
        <th><%= Address.human_attribute_name("state") %></th>
        <th><%= Address.human_attribute_name("contact") %></th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @addresses.each do |address| %>
        <tr style="background: <%= cycle('white', '#F7F7F7') %>">
          <td><%= address.street %></td>
          <td><%= address.city %></td>
          <td><%= address.state %></td>
          <td><%= address.contact.nome %></td>
          <td><%= link_to 'Show', address %></td>
          <td><%= link_to 'Edit', edit_address_path(address) %></td>
          <td><%= link_to 'Destroy', address, method: :delete, data: { confirm: t('mensages.confirm') } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
  <%= paginate @addresses %>
  <br>

  <%= link_to 'Novo EndereÃ§o', new_address_path, class: "button" %>
  <%= link_to 'Home', root_path, class: "button" %>
</div>