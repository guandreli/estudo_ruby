<div class="basic-grey">
  <p id="notice"><%= notice %></p>
  <h1><%= "#{t("mensages.list")} de #{@contacts.model_name.human(count: @contacts.size)}" %></h1>

  <table>
    <thead>
      <tr>
        <th><%= Contact.human_attribute_name("nome") %></th>
        <th><%= Contact.human_attribute_name("email") %></th>
        <th><%= Contact.human_attribute_name("kind") %></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @contacts.each do |contact| %>
        <tr style="background: <%= cycle("white", "#F7F7F7") %>">
          <td><%= contact.nome %></td>
          <td><%= contact.email %></td>
          <td><%= contact.kind.description %></td>
          <td><%= link_to t("buttons.show"), contact %></td>
          <td><%= link_to t("buttons.edit"), edit_contact_path(contact) %></td>
          <td><%= link_to t("buttons.destroy"), contact, method: :delete, data: { confirm: t("mensages.confirm") } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
  <%= paginate @contacts %>
  <br>

  <%= link_to "Novo Contato", new_contact_path, class: "button" %>
  <%= link_to "Home", root_path, class: "button" %>
</div>